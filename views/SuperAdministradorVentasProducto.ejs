   <script>
      $(document).ready(function() {

         dataSource = new kendo.data.DataSource({
            transport: {
               read: {
                  url: "/producto_venta?sort=nombre ASC",
                  dataType: "json"
               },
               update: {
                  url: "/producto_venta/update",
                  dataType: "json"
               },

               parameterMap: function(options, operation) {
                  if (operation !== "read" && options.models) {
                     var datos = options.models[0];
                     return datos;
                  }
               }
            },
            error: function(e) {
               toastr.error(JSON.stringify(e), 'Error al realizar la transacción del Producto');
               console.log(JSON.stringify(e));
            },
            batch: true,
            pageSize: 10,
            requestEnd: function(e) {
               if (e.type != 'read') {
                  e.sender.read();
               }
            },
            schema: {
               model: {
                  id: "idProductoVenta",
                  fields: {
                     nombre: {
                        validation: {
                           required: true
                        }
                     },
                  }
               }
            }
         });

         $("#grid").kendoGrid({
            dataSource: dataSource,
            pageable: {
               refresh: true,
               pageSizes: true,
               buttonCount: 5
            },
            height: 550,
            filterable: {
               mode: "row"
            },
            toolbar: ["excel"],
            excel: {
               fileName: "Lista-Productos.xlsx"
            },
            columns: [{
               field: "nombre",
               title: "Nombre Producto",
               width: "90px"
            }, {
               command: ["edit"],
               title: "&nbsp;",
               width: "100px"
            }],
            editable: "inline"
         });

      });
   </script>
