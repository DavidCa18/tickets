      function buscarClientesTickets() {
         io.socket.get('/cliente_venta', function(resData, jwres) {

            if (jwres.statusCode == 200) {
               var htmlOut = '<option value="0">NINGUN CLIENTE</option>';
               for (var i = 0; i < resData.length; i++) {
