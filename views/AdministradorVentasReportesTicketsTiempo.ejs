               $('#cliente').append(htmlOut);

               $('#cliente').multiselect('destroy');
               $('#cliente').multiselect({
                  includeSelectAllOption: true,
                  enableFiltering: true,
                  buttonWidth: '100%',
                  maxHeight: 280
               });
            }
         });
      }

      function buscarUsuariosTicket() {
         io.socket.get('/usuario', function(resData, jwres) {

            if (jwres.statusCode == 200) {
               var htmlOut = '<option value="0">NINGUN USUARIO</option>';
               for (var i = 0; i < resData.length; i++) {
                  htmlOut += '<option value="' + resData[i].idUsuario + '">' + resData[i].nombre + '</option>';
               }

               $('#usuarios').empty();
               $('#usuarios').append(htmlOut);

               $('#usuarios').multiselect('destroy');
               $('#usuarios').multiselect({
                  includeSelectAllOption: true,
                  enableFiltering: true,
                  buttonWidth: '100%',
                  maxHeight: 280
               });
            }
         });
      }

      function buscarTicketsMensual() {
         var consulta = '';
         var options = {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            hour: 'numeric',
            minute: 'numeric',
            second: 'numeric'
         };

         var fechaApertura = $('#fechaApertura').val();
         var fechaCierre = $('#fechaCierre').val();
         var cliente = $('#cliente').val();
         var estado = $('#estado').val();
         var usuario = $('#usuarios').val();

         if (estado != 0) {
            consulta += ('ticket_venta.estado = \'' + estado + '\' AND ');
         }

         if (cliente != 0) {
            consulta += (
               '(SELECT ' +
               'GROUP_CONCAT( cliente_venta.idClienteVenta ) ' +
               'FROM ' +
               'cliente_ticket_venta ' +
               'INNER JOIN cliente_venta ON cliente_ticket_venta.idClienteVenta = cliente_venta.idClienteVenta ' +
               'WHERE ' +
               'cliente_ticket_venta.idTicketVenta = ticket_venta.idTicketVenta ' +
               ') LIKE \'%' + cliente + '%\' AND ');
         }

         if (usuario != 0) {
            consulta += (
               '(SELECT ' +
               'GROUP_CONCAT( usuario.idUsuario ) ' +
               'FROM ' +
               'usuario_ticket_venta ' +
               'INNER JOIN usuario ON usuario_ticket_venta.idUsuario = usuario.idUsuario ' +
               'WHERE ' +
               'usuario_ticket_venta.idTicketVenta = ticket_venta.idTicketVenta ' +
               ') LIKE \'%' + usuario + '%\' AND ');
         }

         consulta += ('DATE(ticket_venta.fechaApertura) >= \'' + fechaApertura + '\' && DATE(ticket_venta.fechaCierre) <= \'' + fechaCierre + '\' AND ');

         //console.log((consulta.substr(0, (consulta.length - 4))));

         io.socket.post('/ticket_venta/searchTicketVentasTiempo', {
            sql: (consulta.substr(0, (consulta.length - 4)))
         }, function(resData, jwres) {
            var htmlOut = '';
            if (jwres.statusCode == 201) {

               var duracionVenta = '';

               $("#reporteTicket").removeClass("hide");
               $('#mesSR').empty();
               $('#bodyReporteMensual').empty();

               for (var i = 0; i < resData.length; i++) {

                  var fechaAperturaValidacion = new Date(resData[i].fechaApertura);
                  var fechaCierreValidacion = new Date(resData[i].fechaCierre);
                  var fechaCierre;
                  var costo;

                  if (resData[i].duracionVenta != null) {
                     duracionVenta = resData[i].duracionVenta;
                  } else {
                     duracionVenta = ''
                  }

                  if (fechaCierreValidacion.toLocaleDateString("es-ES", options) == fechaAperturaValidacion.toLocaleDateString("es-ES", options)) {
                     fechaCierre = '';
                  } else {
                     fechaCierre = fechaCierreValidacion.toLocaleDateString("es-ES", options);
                  }

                  if (resData[i].costo != null) {
                     costo = '$ ' + resData[i].costo;
                  } else {
                     costo = '';
                  }

                  htmlOut += '<tr>' +
                     '<td>' + resData[i].codigo + '</td>' +
                     '<td>' + resData[i].estado + '</td>' +
                     '<td><b>Empresa: </b>' + resData[i].empresa + ' <br> <b>Cliente: </b>' + resData[i].cliente + '</td>' +
                     '<td>' + resData[i].producto + '</td>' +
                     '<td>' + fechaAperturaValidacion.toLocaleDateString("es-ES", options) + '</td>' +
                     '<td>' + fechaCierre + '</td>' +
                     '<td>' + duracionVenta + '</td>' +
                     '<td>' + costo + '</td>' +
                     '</tr>';


               }
               $('#bodyReporteMensual').html(htmlOut);
               buscarTicketsMensualResumen((consulta.substr(0, (consulta.length - 4))));

               data = resData;
            }

         });

      }

      function buscarTicketsMensualResumen(sql_) {
         io.socket.post('/ticket_venta/reportTicketVentasTiempoSummary', {
            sql: sql_
         }, function(resData, jwres) {
            var htmlOut = '';
            if (jwres.statusCode == 201) {

               var htmlOut = '';

               for (var i = 0; i < resData.length; i++) {

                  var costoTotal;

                  if (resData[i].costoTicket != null) {
                     costoTotal = '$ ' + Math.round(resData[i].costoTicket * 100) / 100;
                  } else {
                     costoTotal = '$ 0';
                  }

                  htmlOut +=
                     '<tr>' +
                     '<td>' + resData[i].estado + '</td>' +
                     '<td>' + resData[i].numeroTickets + '</td>' +
                     '<td>' + costoTotal + '</td>' +
                     '</tr>';
               }
               $('#bodyReporteMensualResumen').empty();
               $('#bodyReporteMensualResumen').html(htmlOut);
            }

         });
      }

      $("#imprimirReporte").click(function() {
         $("#reporteTicket").printMe({
            "path": ["font-awesome/css/font-awesome.css", "css/bootstrap.css", "css/style.css", "css/reportes.css"]
         });
