<div class="middle-box text-center loginscreen animated fadeInDown" style="background: white; border-radius: 13px 13px 13px 13px;">
   <div>
      <div class="row">
         <div class="col-md-1 col-sm-1 col-xs-1"></div>
         <div class="col-md-10 col-sm-10 col-xs-10">
            <div>
               <img src="/images/logoInicio.png" alt="TICKETING PLUS +" width="100%">
            </div>
            <br>
            <form id="fmrLogin" class="m-t" role="form">
               <div class="form-group">

                  <div class="input-group m-b">
                     <span class="input-group-addon">
                <i class="fa fa-user"></i>
              </span>
                     <input type="text" class="form-control" placeholder="Usuario" name="email">
                  </div>
               </div>
               <div class="form-group">

                  <div class="input-group m-b">
                     <span class="input-group-addon">
                <i class="fa fa-lock"></i>
              </span>
                     <input type="password" class="form-control" placeholder="Contraseña" name="password">
                  </div>
               </div>
               <div class="form-group">
                  <b>&nbsp; Seleccionar Sistema</b>
                  <br>
                  <br>
                  <div class="row">
                     <div class="radio radio-primary radio-inline">
                        <input type="radio" id="sistemaVentas" value="ventas" name="sistema">
                        <label for="sistemaVentas"> Ventas&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                     </div>
                     <div class="radio radio-warning radio-inline">
                        <input type="radio" id="sistemaServicioTecnico" value="tecnico" name="sistema" checked="">
                        <label for="sistemaServicioTecnico"> Servicio Técnico </label>
                     </div>
                     <div class="col-md-6 col-sm-6 col-xs-6">
                        <i class="btn btn-success dim" style="width: 100%">
                  <img src="/images/ventas.png" alt="SERVICIO VENTAS" width="100%">
                </i>
                     </div>
                     <div class="col-md-6 col-sm-6 col-xs-6">
                        <i class="btn btn-warning dim" style="width: 100%">
                  <img src="/images/servicio.png" alt="SERVICIO TECNICO" width="100%">
                </i>
                     </div>
                  </div>
               </div>
               <br>
               <button type="submit" class="btn btn-success block full-width m-b" style="background: #213a53" id="btnIniciar">Ingresar</button>

               <!-- <p class="text-muted text-center">
                  <small style="color: black">¿Olvidó la Contraseña?</small>
               </p>
               <a class="btn btn-sm btn-white btn-block" href="">Restablecer Contraseña</a> -->
            </form>
            <br><br><br>
            <p class="m-t"><small><strong>Ticketing </strong> &copy; 2020 - 2021</small></p>
         </div>
         <div class="col-md-1 col-sm-1 col-xs-1"></div>
      </div>
   </div>
</div>

<script>
   $('#btnIniciar').click(function(e) {
      e.preventDefault();
      var data = $('#fmrLogin').serialize();

      $.ajax({
         type: 'POST',
         url: 'usuario/login',
         data: data,
         success: function(data) {
            console.log(data);
            if (data == '/') {
               toastr.error('Credenciales Incorrectas', 'Iniciar Sesión');
            } else {
               location.replace(data);
            }

         },
         error: function(xhr, ajaxOptions, thrownError) {
            toastr.error('Credenciales Incorrectas', 'Iniciar Sesión');
         }
      });
   });
</script>